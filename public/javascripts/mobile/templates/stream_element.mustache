{{#author}}
  <a href='/#people/{{id}}'>
    <img src='{{avatar}}' class='avatar'/>
  </a>
{{/author}}
<div class='content'>
  <abbr class="stream-date timeago">
    {{date}}
  </abbr>
  {{#author}}
    <div class="author-name">
      <a href='/#people/{{id}}'>
        {{name}}
      </a>
    </div>
  {{/author}}
  {{{text}}}

  {{#photos}}
    <div class="stream-photos">
      {{#photo}}
        <img src='{{thumb_medium}}' class="stream-photo"/>
      {{/photo}}
    </div>
  {{/photos}}

  {{#commentCount}}
    <div class="post-info">
      <div class="comments-counter">
        <img src='/images/icons/comment.gif' height=14 width=14/>
        {{commentCount}}
      </div>
    </div>
  {{/commentCount}}
</div>
